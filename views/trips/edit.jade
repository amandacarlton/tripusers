extends ../layout 

block content
    div.create
      h1 Edit Trip
      form(action="/trip/"+trip._id+"/edit", method="post")
       label(for="name") Name of Trip 
       input(type="text" name="name" id="id" value=trip.name required)
       p
       label(for="sdate") Start Date
       input(type="date" name="sdate" id="sdate" value=trip.startDate)
       p
       label(for="edate") End Date
       input(type="date" name="edate" id="edate" value=trip.endDate required)
       p
       input(type="submit" value="Edit Trip")
  
