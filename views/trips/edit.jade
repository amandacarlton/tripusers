doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/main.css')
    link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Fjalla+One')
  body
   block content
   div.layer
    div.create
      a(href="/") Back Home
      h1 Edit Trip
      form(action="/trip/"+trip._id+"/edit", method="post")
       label(for="name") Name of Trip 
       input(type="text" name="name" id="id" value=trip.name)
       p
       label(for="sdate") Start Date
       input(type="date" name="sdate" id="sdate" value=trip.startDate)
       p
       label(for="edate") End Date
       input(type="date" name="edate" id="edate" value=trip.endDate)
       p
       input(type="submit" value="Edit Trip")
  
